<%= form_for([@post, @post.comments.build]) do |f| %>
<!--The form_for call here uses an array, which will build a nested route, such as /posts/1/comments.-->
  <p>
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>